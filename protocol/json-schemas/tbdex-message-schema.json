                {
                    "type": "object",
                    "required": [
                        "body"
                    ],
                    "properties": {
                        "body": {
                            "$ref": "#/definitions/quote"
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "type",
                        "body"
                    ],
                    "properties": {
                        "type": {
                            "const": "order"
                        },
                        "body": {
                            "$ref": "#/definitions/order"
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "type",
                        "body"
                    ],
                    "properties": {
                        "type": {
                            "const": "orderStatus"
                        },
                        "body": {
                            "$ref": "#/definitions/orderStatus"
                        }
                    }
                }
            ]
        }
    ]
