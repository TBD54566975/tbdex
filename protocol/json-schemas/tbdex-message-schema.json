                },
                "payout": {
                    "$ref": "#/definitions/paymentInstruction"
                }
            }
        },
        "paymentInstruction": {
            "type": "object",
            "properties": {
                "link": {
                    "type": "string"
                },
                "instruction": {
                    "type": "string"
                }
            }
