                "verifiablePresentationJwt": {
                    "type": "string"
                },
                "payinInstrument": {
                    "$ref": "#/definitions/paymentInstrument"
                },
                "payoutInstrument": {
                    "$ref": "#/definitions/paymentInstrument"
                }
            },
            "required": [
                "pair",
                "amount",
                "verifiablePresentationJwt",
                "payinInstrument",
                "payoutInstrument"
            ]
        },
        "quote": {
            "type": "object",
            "properties": {
                "expiryTime": {
