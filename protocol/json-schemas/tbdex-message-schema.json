                },
                "unitPrice": {
                    "type": "string"
                },
                "baseFee": {
                    "type": "string"
                },
                "min": {
                    "type": "string"
                },
                "max": {
                    "type": "string"
                },
                "presentationRequestJwt": {
                    "type": "string"
                },
                "payinInstruments": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/paymentInstrument"
                    }
                },
                "payoutInstruments": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/paymentInstrument"
                    }
                }
            },
            "required": [
                "description",
                "pair",
                "unitPrice",
                "min",
                "max",
                "presentationRequestJwt",
                "payinInstruments",
                "payoutInstruments"
            ]
        },
        "rfq": {
            "type": "object",
            "properties": {
                "pair": {
                    "type": "string"
