            ]
        },
        "orderStatus": {
            "type": "object",
            "properties": {
                "orderStatus": {
                    "enum": [
                        "PENDING",
                        "COMPLETED"
                    ]
                }
            },
            "required": [
                "orderStatus"
            ]
        },
        "paymentInstrument": {
            "type": "object",
            "properties": {
                "kind": {
                    "enum": [
                        "DEBIT_CARD",
                        "BITCOIN_ADDRESS"
