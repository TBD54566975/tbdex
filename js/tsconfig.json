{
  "compilerOptions": {
    "strict": false,
    "lib": [
      "DOM",
      "ES6"
    ],
    "rootDir": "./",
    "allowJs": true,
    "target": "esnext",
    "module": "nodenext",
    "outDir": "dist/esm",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ]
}